<!DOCTYPE html>
html(lang="en")
    head
        include includes/head.pug
    body
        include includes/nav.pug
        section(class="bg-light", style="height: calc(100vh - 190px)")
          div(class="container")
            div(class="row align-items-center justify-content-between", style="height: 500px")
              div(class="col-sm-12 col-md-6 offset-md-3")
                h5 Type Bill NO#
                form(action="/findbillno", method="get")
                  div(class="input-group input-group-lg")
                    input(type="text", class="form-control my-3", name="billno")
                    <button type="submit" class="btn btn-dark btn-lg btn-block">Submit</button>
                if error
                  h3(class="text-danger mt-3") #{error}
                if file
                  h3(class="mt-3")
                    a(href='/filepdf?filename=' + file, class="text-danger") File
                      i(class="far fa-file-pdf ml-1")
                      
        include includes/end.pug
